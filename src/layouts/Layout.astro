---
import '../style/global.css';

// Extract critical CSS
const criticalCSS = `
  :root {
    --primary: #00008B;
    --secondary: #FF8C00;
    --text: #333;
    --background: #fff;
    --lightgray: #f5f5f5;
    --darkgray: #666;
  }
  body {
    font-family: 'Inter', sans-serif;
    margin: 0;
    padding: 0;
    background-color: var(--background);
    color: var(--text);
  }
  a {
    text-decoration: none;
    color: inherit;
  }
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    font-weight: bold;
    transition: all 0.3s ease;
  }
`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Handyman Hinchman - Professional handyman services including plumbing, electrical work, furniture assembly, and more." />
		<title>Handyman Hinchman - Gilbert, AZ Home Services</title>
		
		<!-- Preconnect to domains -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		
		<!-- Preload critical assets -->
		<link rel="preload" fetchpriority="high" as="image" href="/Hlogo.svg" type="image/svg+xml">
		
		<!-- Inline critical CSS -->
		<style set:html={criticalCSS}></style>
		
		<!-- Load fonts with display=swap for better performance -->
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<header>
			<nav>
				<div class="logo">
					<a href="/">
						<img src="/Hlogo.svg" alt="Handyman Hinchman Logo" class="logo-image" width="50" height="50" fetchpriority="high">
						<span class="logo-text">Handyman <span style="color: var(--primary);">Hinchman</span></span>
					</a>
				</div>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/services">Services</a></li>
					<li><a href="/pricing">Pricing</a></li>
					<li><a href="/about">About</a></li>
					<a href="/contact" class="btn btn-primary"><li>Contact</li></a>
				</ul>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; {new Date().getFullYear()} Handyman Hinchman. All rights reserved.</p>
			<p>üìû (123) 456-7890</p>
			<p>‚úâÔ∏è handymanhinchman@gmail.com</p>
		</footer>
	</body>
</html>


<style>
	
	header {
		color: var();
		padding: 1rem;
	}
	
	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin: 0 auto;
	}

	
	.logo {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 1.5rem;
		font-weight: bold;
		color: var(--primary);
	}
	
	.logo-image {
		vertical-align: middle;
	}
	
	.logo-text {
		display: inline-block;
		vertical-align: middle;
		line-height: 1;
		color: var(--text);
	}
	
	nav ul {
		display: flex;
		list-style: none;
		gap: 2rem;
		margin: 0;
		padding: 0;
		align-items: center;
	}
		

	nav ul li a:hover {
		color: var(--primary);
		border-bottom: 2px solid var(--primary);
	}

	

	
	footer {
		background-color: var(--lightgray);
		color: var(--text);
		text-align: center;
		padding: 1rem;
		padding-top: 4rem;
	}



	@media (max-width: 768px) {
		nav {
			flex-direction: column;
			gap: 1rem;
		}

		.logo a{
			margin-bottom: 0.5rem;
			display: flex;
			flex-direction: row;
			align-items: center;
			gap: 0.3rem;
		}

		.logo-text {
			display:flex;
			flex-direction: column;
			align-items: left;
			gap: 0.15rem;
		}

		nav ul {
			flex-wrap: wrap;
			justify-content: center;
		}
	}

	
	@media (max-width: 450px) {
		nav ul li{
			padding: 0 1.2rem;
		}
	}
</style>