---
import '../style/global.css';

interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "Ready to Get Started?",
  description = "Contact us today for a free quote on your project",
  buttonText = "Contact Us",
  buttonLink = "/contact"
} = Astro.props;
---

<section class="contact-cta">
  <h2>{title}</h2>
  <p>{description}</p>
  <a href={buttonLink} class="btn btn-primary">{buttonText}</a>
</section>

<style>
  .contact-cta {
    background-color: var(--background);
    text-align: center;
    max-width: 900px;
    position: relative;
    overflow: hidden;
    padding: 3rem 3rem;
    margin: 2rem auto;
    border-radius: 8px;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: transform 0.3s, box-shadow 0.3s;
    will-change: transform;
  }

  .btn-primary {
    font-size: 1.33rem;
    border: 2px solid var(--accent);
    background-color: var(--accent);
    color: var(--background);  
  }

  .btn-primary:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 8px rgba(0, 0, 0, .3);
  }

  @media (max-width: 768px) {
    .contact-cta {
      padding: 2rem 1rem;
      margin: 1rem;
    }
  }
</style> 